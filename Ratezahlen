#Ratezahlen

import random as r

counter=0
Ratezahl=r.randint(1,100)

Eingabe=int(input("Bitte geben sie eine Zahl zwischen 1 und 100 ein:\n"))
print()

while Eingabe != Ratezahl:
    if Eingabe<Ratezahl:
        print("Ihre Zahl ist zu klein!")
        Eingabe=int(input("Versuchen sie es erneut:\n"))
        print()
        counter=counter+1
    if Eingabe>Ratezahl:
         print("Ihre Zahl ist zu groÃŸ!")
         Eingabe=int(input("Versuchen sie es erneut:\n"))
         print()
         counter=counter+1
if Eingabe==Ratezahl:
    print("Treffer!")
    print("Sie benÃ¶tigten",counter,"Versuche!")


    
